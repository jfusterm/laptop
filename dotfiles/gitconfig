[color]
    ui = true

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = green
    changed = yellow
    untracked = red

[core]
    editor = vim

[alias]
    unstage = reset HEAD
    st = status
    ci = commit --all
    pl = pull
    ft = fetch
    br = branch
    co = checkout
    df = diff
    dc = diff --cached
    lg = log -p
    ls = ls-files
    a = add
    merge = merge --no-ff
    mg = --no-ff
